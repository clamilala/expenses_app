<!-- application.html.erb にHTMLタグ等が記述されているため、このファイルには記載不要 -->
<!-- application.html.erb の< %= yield %> の部分に、このファイルが挿入される。 -->

<h1>ここに家計簿を作りたい</h1>

<div class="form-group"> 
  <%= form_tag("/create") do %>
    <div class="form-group row">
        <label for="text3a" class="col-sm-2 col-form-label">日付</label>
        <div class="col-sm-10">
            <input name="pay_ymd" type="date">
        </div>
    </div>
    <div class="form-group row">
        <label for="text3a" class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
            <input name="amount" type="number" class="form-control">
        </div>
    <input type="submit" value="登録">
  <% end %>
 </div>

<div class="container">

  <% @payments.each do |pay| %>
  <ul>
    <li>ID：<%= pay.id %>，日付：<%= pay.pay_ymd %>，分類：<%= pay.classification_id %>，金額：<%= pay.amount %>，内容：<%= pay.remarks %>，<%= link_to("削除", "/#{pay.id}/destroy") %></li>
  </ul>
  <% end %>
</div>

