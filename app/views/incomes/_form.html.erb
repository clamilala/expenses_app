<%= form_with model: @jounal_entry , local: true do |form| %>
  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="ymd">日付</label>
    <%= form.date_field :ymd, class: "form-control col-sm-9", id: "ymd" %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="income_classification_name">分類</label>
      <%= form.collection_select(:income_classification_id, @income_classifications, :id, :name, {prompt: nil}, {class: "form-control col-sm-9"})  %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="income_amount">金額</label>
      <%= form.number_field :income_amount, class: "form-control col-sm-9", id: "income_amount" %>
  </div>
  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="wallet_name">財布／口座</label>
    <%= form.collection_select(:wallet_id, @wallets, :id, :name, {prompt: nil}, {class: "form-control col-sm-9"})  %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="remarks">備考</label>
      <%= form.text_field :remarks, class: "form-control col-sm-9", id: "remarks" %>
  </div>
  <input type="hidden" name="jounal_entry[pay_classification_id]" value="999">
  <input type="hidden" name="jounal_entry[pay_amount]" value=0>
  <div class="form-group row justify-content-between">
        <input type="submit" class="btn btn-info col-sm" value="登録">
        <%= link_to 'キャンセル', jounal_entries_path, class:"btn btn-secondary col-sm", role: "button"%>
  </div>
<% end %> 
