
<div class="container">

    <div class="form-group"> 
       <%= form_tag("/login") do %>
        <div class="form-group row">
            <label for="text3a" class="col-sm-2 col-form-label">ログインID</label>
            <div class="col-sm-10">
                <input name="login_id" type="text" value="" >
            </div>
        </div>
        <div class="form-group row">
            <label for="text3a" class="col-sm-2 col-form-label">パスワード</label>
            <div class="col-sm-10">
                <input name="password" type="password" value="" >
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary" value="ログイン">
            </div>
        </div>
        <% end %>
        <div class="form-group row">
        <%= link_to("新規登録", "/users/new", role: "button" , class: "btn btn-outline-primary btn-block" ) %>
        </div>
    </div>
</div>