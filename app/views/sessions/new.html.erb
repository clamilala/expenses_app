
<div class="container">
    ログイン画面
    <div class="form-group"> 
      <%= form_with scope: :session , local: true do |form| %>
        <div class="form-group row">
            <label for="text3a" class="col-sm-2 col-form-label">ログインID</label>
            <%= form.text_field :login_id, class: "form-control col-sm-9", id: "user_login_id" %>
        </div>
        <div class="form-group row">
            <label for="text3a" class="col-sm-2 col-form-label">パスワード</label>
            <%= form.password_field :password, class: "form-control col-sm-9", id: "user_password" %>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary" value="ログイン">
            </div>
        </div>
        <% end %>
        <div class="form-group row">
        <%= link_to("新規登録", "/users/new", role: "button" , class: "btn btn-outline-primary btn-block" ) %>
        </div>
    </div>
</div>