
<div class="container">
  <h3>ユーザー登録</h3>
  <div class="form-group"> 
    <%= form_tag("/users") do %>
      <div class="form-group row">
          <label for="text3a" class="col-sm-2 col-form-label">名前</label>
          <div class="col-sm-10">
              <input name="name" type="text" value="" >
          </div>
      </div>
      <div class="form-group row">
          <label for="text3a" class="col-sm-2 col-form-label">ログインID</label>
          <div class="col-sm-10">
              <input name="login_id" type="text" value="" >
          </div>
      </div>
      <div class="form-group row">
          <label for="text3a" class="col-sm-2 col-form-label">パスワード</label>
          <div class="col-sm-10">
              <input name="password" type="password" value="" >
          </div>
      </div>
      <div class="form-group row">
          <label for="text3a" class="col-sm-2 col-form-label">パスワード（確認）</label>
          <div class="col-sm-10">
              <input name="password_confirmation" type="password" value="" >
          </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="新規登録">
          </div>
      </div>
    <% end %>
  </div>
</div>