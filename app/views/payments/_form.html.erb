<%= form_with model: @payment , local: true do |form| %>
  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="pay_ymd">日付</label>
    <%= form.date_field :pay_ymd, class: "form-control col-sm-9", id: "pay_ymd" %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="pay_type_name">分類</label>
      <%= form.collection_select( :pay_type_name, @paytypes, :pay_type_name, :pay_type_name, {prompt: nil}, {class: "form-control col-sm-9"})  %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="payment_amount">金額</label>
      <%= form.number_field :amount, class: "form-control col-sm-9", id: "payment_amount" %>
  </div>
  <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="payment_remarks">備考</label>
      <%= form.text_field :remarks, class: "form-control col-sm-9", id: "payment_remarks" %>
  </div>
  <div class="form-group row justify-content-between">
        <input type="submit" class="btn btn-primary col-sm" value="登録">
        <%= link_to 'キャンセル', payments_path, class:"btn btn-danger col-sm", role: "button"%>
  </div>
<% end %> 
