  <body>
    <header>
        <nav class="navbar fixed-top navbar-dark bg-dark">
              <%= link_to "一覧", payments_path, class:"btn btn-info", role: "button col-10" %>
              <%= link_to "登録", new_payment_path, class:"btn btn-info", role: "button" %>
