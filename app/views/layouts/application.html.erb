<body class="">
  <div class="wrapper">

    <% if current_user %>
    <div class="sidebar" data-color="white" data-active-color="danger">
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="<%= "active" if @active_page == "支出の入力" %>">
            <!-- <i class="nc-icon nc-bank"></i> -->
            <%= link_to "支出の入力", '/payments/new' %>
          </li>
          <li class="<%= "active" if @active_page == "収入の入力" %>">
            <!-- <i class="nc-icon nc-diamond"></i> -->
            <%= link_to "収入の入力", '/incomes/new' %>
          </li>
          <li class="<%= "active" if @active_page == "入力の一覧" %>">
            <!-- <i class="nc-icon nc-pin-3"></i> -->
            <%= link_to "入力の一覧", jounal_entries_path %>
          </li>
          <li class="<%= "active" if @active_page == "集計表" %>">
            <!-- <i class="nc-icon nc-bell-55"></i> -->
            <%= link_to "集計表", '/spreadsheets/' %>
          </li>
<!--
          <li>
            <a href="./user.html">
