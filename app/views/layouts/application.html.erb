            <!-- <i class="nc-icon nc-caps-small"></i> -->
            <%= link_to "設定", "/appsettings" %>
          </li>

        </ul>
      </div>
    </div>
    <% end %>

    <% if current_user %>
    <div class="main-panel">
    <% else %>
    <div class="main-panel main-panel_login">
    <% end %>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <a class="navbar-brand" href="#">家計簿</a>
          </div>
          <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <% if current_user %>
              <%= link_to "設定", appsettings_path, class:"btn btn-info", role: "button" %>
            <% else %>
              <%= link_to "ログイン", "/login", class:"btn btn-info", role: "button" %>
            <% end %>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->

      <div class="content">
        <div class="row">
          <%= yield %>
        </div>
      </div>

      <footer class="footer footer-black  footer-white ">
      </footer>
    </div>

  </div>
  <% if flash.any? %>
    <script type="text/javascript">
      <% flash.each do |key, value| %>
        <% key = "success" if key == "notice" %>
        <% key = "error" if key == "alert" %>
        toastr['<%= key %>']('<%= value %>');
      <% end %>
    </script>
  <% end %>


  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
